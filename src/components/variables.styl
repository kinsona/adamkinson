responsive-container()
  margin: auto
  width: auto
  @media (min-width: 768px) and (max-width: 991px)
    width: 750px
  @media(min-width: 992px)
    width: 970px

// colors
$color-primary = #fef0c2
$color-secondary = #ddd
$text-primary = #333
$text-secondary = #777
$text-link = #337ab7
$text-link-hover = #23527c

$track-border-color = lighten($text-secondary, 50%)

// font sizes -- use media queries?
$font-size-small = 14px
$font-size-standard = 18px
$font-size-large = 22px
$font-size-xlarge = 28px

$header-height = 40px
$header-height-small = 50px
